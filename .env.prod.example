APP_NAME=qrmenu
APP_ENV=production
APP_PORT=8080
APP_ALLOWED_ORIGINS=https://qrmenu.yourdomain.com,https://admin.qrmenu.yourdomain.com

DB_HOST=postgres
DB_PORT=5432
DB_USER=qrmenu
DB_PASSWORD=${DB_PASSWORD}        # inject via secret / env
DB_NAME=qrmenu
DB_SSLMODE=disable                # set to 'require' when using managed Postgres with SSL
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=20
DB_CONN_MAX_LIFETIME_SEC=900
DB_CONN_MAX_IDLE_TIME_SEC=300

JWT_SECRET=${JWT_SECRET}          # set via secret manager
JWT_EXPIRES_MINUTES=1440

# ADMIN_EMAIL=admin@yourdomain.com
# ADMIN_PASSWORD=${ADMIN_PASSWORD}  # set via secret manager
LOG_LEVEL=info
